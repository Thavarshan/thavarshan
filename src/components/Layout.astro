---
interface Props {
	title: string;
	description: string;
	ogId?: string;
}

const currentYear = new Date().getFullYear();
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={Astro.props.description} />
		<title>{Astro.props.title}</title>
		<link rel="preconnect" href="/" crossorigin />
		<link rel="preload" href="/profile.jpeg" as="image" />
		<link rel="icon" href="/profile.jpeg" />
		<link rel="alternate" type="application/rss+xml" title="Jerome" href={`${Astro.site}rss.xml`} />

		<!-- OpenGraph tags -->
		<meta name="og:title" content={Astro.props.title} />
		<meta property="og:title" content={Astro.props.title} />
		<meta property="og:type" content="website" />
		<meta property="og:locale" content="en" />
		<meta property="og:description" content={Astro.props.description} />
		<meta property="og:site_name" content="Jerome" />
		<meta property="og:url" content="https://thavarshan.com" />
		<meta property="og:image" content="https://thavarshan.com/profile.jpeg" />

		<!-- Twitter tags -->
		<meta name="twitter:card" content="summary" />
		<meta name="twitter:site" content="@thavarshan" />
		<meta name="twitter:title" content={Astro.props.title} />
		<meta name="twitter:description" content={Astro.props.description} />

		<!-- Discord -->
		<meta name="theme-color" content="#92400e" />
	</head>
	<body class="antialiased mx-auto max-w-3xl px-4 text-amber-950 bg-animated gif-background">
		<header class="flex place-content-between place-items-center pb-2 pt-6">
			<a class="block" href="/">
				<img src="/profile.jpeg"
					alt="profile picture"
					class="h-8 w-8 rounded-full bg-animated transition-transform duration-200 ease-in-out hover:scale-110 sm:h-10 sm:w-10"/>
            </a>
			<div class="flex gap-x-4 text-amber-950">
				<a href="https://github.com/Thavarshan" class="hover:text-main hover:underline">Github</a>
				<a href="https://twitter.com/tjthavarshan" class="hover:text-main hover:underline">Twitter</a>
				<a href="https://github.com/sponsors/Thavarshan" class="hover:text-main hover:underline">Donate</a>
			</div>
		</header>
		<main class="py-8 leading-relaxed">
			<slot />
		</main>
        <footer class="flex items-center space-x-2 text-xs justify-center">
            <p class="text-center text-amber-800">Website created by <a target="_blank" href="https://twitter.com/tjthavarshan" class="text-amber-950 hover:text-main hover:underline">Jerome</a></p>
            <span>|</span>
            <p class="text-center text-amber-800">
                Animated <a target="_blank" href="https://www.behance.net/gallery/65838927/Game-Backgrounds" class="text-amber-950 hover:text-main hover:underline">background</a> by <a target="_blank" href="https://www.behance.net/hendzaky2020" class="text-amber-950 hover:text-main hover:underline">Hend Zaky</a> and <a target="_blank" href="https://www.behance.net/m_moh" class="text-amber-950 hover:text-main hover:underline">Mohamed M</a>
            </p>
        </footer>
	</body>
	<style>
		html {
			font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial,
				sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
		}
		code {
			font-family:
				ui-monospace,
				SFMono-Regular,
				SF Mono,
				Menlo,
				Consolas,
				Liberation Mono,
				monospace;
		}
        .gif-background {
            background-image: url('/animation.gif');
            background-position: center bottom;
            background-repeat: repeat-x;
            background-attachment: fixed;
        }
	</style>
</html>
