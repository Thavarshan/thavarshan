---
interface Props {
	title: string;
	description: string;
	ogId?: string;
}

const currentYear = new Date().getFullYear();
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={Astro.props.description} />
		<title>{Astro.props.title}</title>
		<link rel="preconnect" href="/" crossorigin />
		<link rel="preload" href="/profile.png" as="image" />
		<link rel="icon" href="/profile.png" />
		<link rel="alternate" type="application/rss+xml" title="Jerome" href={`${Astro.site}rss.xml`} />

		<!-- OpenGraph tags -->
		<meta name="og:title" content={Astro.props.title} />
		<meta property="og:title" content={Astro.props.title} />
		<meta property="og:type" content="website" />
		<meta property="og:locale" content="en" />
		<meta property="og:description" content={Astro.props.description} />
		<meta property="og:site_name" content="Jerome" />
		<meta property="og:url" content="https://thavarshan.com" />
		<meta property="og:image" content="https://thavarshan.com/profile.png" />

		<!-- Twitter tags -->
		<meta name="twitter:card" content="summary" />
		<meta name="twitter:site" content="@thavarshan" />
		<meta name="twitter:title" content={Astro.props.title} />
		<meta name="twitter:description" content={Astro.props.description} />

		<!-- Discord -->
		<meta name="theme-color" content="#92400e" />
	</head>
	<body class="antialiased mx-auto max-w-3xl px-4 text-zinc-400 bg-zinc-900 gif-background">
		<header class="flex place-content-between place-items-center py-6">
			<a class="block" href="/">
				<img src="/profile.png"
					alt="profile picture"
					class="h-8 w-8 rounded-full transition-transform duration-200 ease-in-out hover:scale-110 sm:h-10 sm:w-10"/>
            </a>
			<div class="flex gap-x-4 text-white">
				<a href="https://github.com/Thavarshan" class="hover:text-zinc-100 hover:underline">Github</a>
				<a href="https://twitter.com/tjthavarshan" class="hover:text-zinc-100 hover:underline">Twitter</a>
				<a href="https://github.com/sponsors/Thavarshan" class="hover:text-zinc-100 hover:underline">Donate</a>
			</div>
		</header>
		<main class="px-4 sm:px-6 py-5 leading-relaxed border border-zinc-800 rounded-lg backdrop-blur-md bg-zinc-800/10">
			<slot />
		</main>
        <footer class="mt-6 flex items-center space-x-2 text-xs justify-center">
            <p class="text-center">Website created by <a target="_blank" href="https://twitter.com/tjthavarshan" class="text-white hover:text-zinc-100 hover:underline">Jerome</a></p>
            <span>|</span>
            <p class="text-center">
                Animated <a target="_blank" href="https://giphy.com/stickers/star-stars-twinkle-Bpm9iMpbGiKg2Q2rM1" class="text-white hover:text-zinc-100 hover:underline">background</a> by <a target="_blank" href="https://littlekingdoms.ca/" class="text-white hover:text-zinc-100 hover:underline">littlekingdoms</a>
            </p>
        </footer>
	</body>
	<style>
		html {
			font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial,
				sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
		}
		code {
			font-family:
				ui-monospace,
				SFMono-Regular,
				SF Mono,
				Menlo,
				Consolas,
				Liberation Mono,
				monospace;
		}
        .gif-background {
            background-image: url('/space.gif');
            background-position: center;
            background-repeat: repeat;
            background-attachment: fixed;
        }
	</style>
</html>
